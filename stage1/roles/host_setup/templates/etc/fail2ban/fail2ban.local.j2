# {{ ansible_managed }}

# Overrides values from the fail2ban.conf configuration file.
#
# For comments relating to each setting see fail2ban.conf

[Definition]

loglevel = {{ host_setup_fail2ban_loglevel }}
logtarget = {{ host_setup_fail2ban_logtarget }}

{% if host_setup_fail2ban_logtarget == "SYSLOG" %}
syslog-target = {{ host_setup_fail2ban_syslog_target }}
syslog-facility = {{ host_setup_fail2ban_syslog_facility }}
{% endif %}

socket = {{ host_setup_fail2ban_socket }}

pidfile = {{ host_setup_fail2ban_pidfile }}
