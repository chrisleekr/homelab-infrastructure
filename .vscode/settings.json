{
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,
  "search.exclude": {
    ".git": true,
    ".build": true,
    "**/.DS_Store": true,
    "**/.vscode": true,
    "**/node_modules": true
  },
  "cSpell.words": [
    "alertmanager",
    "argocd",
    "autodiscover",
    "autovacuum",
    "blockinfile",
    "certmanager",
    "chrislee",
    "chrisleekr",
    "configmap",
    "containerd",
    "coredns",
    "Corefile",
    "crds",
    "crictl",
    "elastalert",
    "Filebeat",
    "filterd",
    "gitaly",
    "gitlay",
    "gitleaks",
    "homelab",
    "hostnames",
    "interruptible",
    "Kubeadm",
    "kubeconfig",
    "kubecost",
    "kubelet",
    "kubent",
    "kubernetescrd",
    "letsencrypt",
    "lineinfile",
    "macvlan",
    "metallb",
    "metricbeat",
    "minio",
    "minitunnel",
    "multipathd",
    "naptime",
    "nerdctl",
    "omniauth",
    "pipefail",
    "posix",
    "precommit",
    "proto",
    "redistributable",
    "resolv",
    "runc",
    "sshpass",
    "templatefile",
    "tflint",
    "tftpl",
    "traefik",
    "trivy",
    "venv"
  ],
  "yaml.format.enable": true,
  "files.associations": {
    "stage1/**/*.yml": "ansible",
    "stage2/**/*.tftpl": "yaml"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  "[css]": {
    "editor.defaultFormatter": "stylelint.vscode-stylelint"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[terraform]": {},
  "ansible.python.interpreterPath": "/opt/homebrew/bin/python3.12"
}
